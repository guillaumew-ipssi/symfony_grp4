{% extends 'base.html.twig' %}

{% block title %}Liste des articles de blog{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				{% for blog in blogs %}
					<div class="row justify-content-center m-4">
						<div class="col-md-8">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-12">
											<div class="row">
												<div class="col-md-9">
													<h4 class="card-title">
														<a href="{{path('show_product', {'id':  blog.id} ) }}">
															{{ blog.title }}
														</a>
													</h4>
												</div>
												<div class="col-md-3">
													Publi√© le <span class="h6">{{ blog.datecreated|date("m/d/Y") }}</span>
												</div>
											</div>
											<p>{{ blog.summary }}</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
