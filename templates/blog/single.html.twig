{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center m-4">
			<div class="col-auto">
				<div class="card">
					<div class="card-body">
						<h2 class="card-title">{{ blog.title }}</h2>
						<p>Publié par <b>{{ blog.writted_by }}</b> le <b>{{ blog.datecreated|date('d/m/Y') }}</b></p>
						<b>Résumé : </b><p class="card-text">{{ blog.summary|raw }}</p>
						<b>Description : </b><p class="card-text">{{ blog.description|raw }}</p>
						<div class="row justify-content-center">
							<div class="col-auto">
								<a href="{{ path('blog') }}" class="btn btn-primary">Retour</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
