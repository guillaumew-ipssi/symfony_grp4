                                <a href="{{ path('product') }}" class="btn btn-primary">Retour</a>
                            </div>
                            <div class="col">
                                <a href="#" class="btn btn-success">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}