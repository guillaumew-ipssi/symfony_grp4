{% extends 'base.html.twig' %}

{% block title %}Liste des animaux
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 mt-5 mb-5 border" style="background-color: #faefe4">
		<h2>Les dernières adoptions</h2>
			{% for adopt in adopts %}
				<div class="col">
					<a href="{{ path('animal_show', {'id': adopt.animal.id}) }}">
					<div class="card" style="width: 10rem">
						<img class="card-img-top" src={{ asset('img/animals/' ~ adopt.animal.path) }} alt="{{ adopt.animal.name }}">
						
					</div>
					</a>
				</div>

			{% endfor %}
		</div>
		<div class="row row-cols-2 row-cols-lg-3 g-2 g-lg-3 mt-3">
			{% for animal in animals %}

				<div class="col">
					<div class="card" style="width: 18rem">
						<img class="card-img-top" src={{ asset('img/animals/' ~ animal.path) }} alt="{{ animal.name }}">
						<div class="card-body">
							<h5 class="card-title">
								{{ animal.name }}</h5>
							<p class="card-text">Age :
								{{ animal.age }}
								ans
							</p>
							<a href="{{ path('animal_show', {'id': animal.id}) }}" class="btn btn-primary">
								Plus de détails
							</a>
							{% if animal.adopt is not empty %}
								<span class="badge bg-success">Adopté</span>
							{% endif %}
							{# <a href="{{path('show_product', {'id':  product.id} ) }}" class="btn btn-primary">Description</a>     #}
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>

{% endblock %}
