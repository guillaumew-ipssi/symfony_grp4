{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <div class="container">    
        <div class="row justify-content-center m-4">
            <div class="col-auto">
                <div class="card" style="width: 40rem;">
                    <img style="max-width : 23em; max-height : 23em;" src="{{ asset('img/cat.jpg') }}"  alt={{ animal.name }}>
                    <div class="card-body">
                        <h5 class="card-title">{{ animal.name }}</h5>
                        <p class="card-text">{{ animal.age }}</p>
                        <p class="card-text">{{ animal.type.name }}</p>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <a href="{{ path('product') }}" class="btn btn-primary">Retour</a>
                            </div>
                            <div class="col">
                                <a href="#" class="btn btn-success">Demande d'adoption</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}